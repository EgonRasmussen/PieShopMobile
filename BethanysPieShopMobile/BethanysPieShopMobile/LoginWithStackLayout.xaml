<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BethanysPieShopMobile.LoginWithStackLayout"
             BackgroundImage="patternwide.png">
    <StackLayout Margin="5">
        <Label Text="Welcome to Bethany's Pie Shop" 
               FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        <StackLayout Orientation="Horizontal">
            <Label Text="User name" FontSize="Medium" VerticalOptions="Center"></Label>
            <Entry Placeholder="Enter your user name" HorizontalOptions="StartAndExpand" VerticalOptions="Center"></Entry>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Password" FontSize="Medium" VerticalOptions="Center"></Label>
            <Entry Placeholder="Enter your password" HorizontalOptions="StartAndExpand" VerticalOptions="Center"></Entry>
        </StackLayout>
    </StackLayout>
</ContentPage>