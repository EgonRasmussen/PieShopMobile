<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BethanysPieShopMobile.TimeAndDatePickerPage"
             BackgroundImage="patternwide.png">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Working with the date and time" FontSize="Large" />

                <DatePicker MinimumDate="01/01/2019"
                            MaximumDate="12/31/2019"
                            Date="02/02/2018" />

                <DatePicker Format="D"
                            MinimumDate="01/01/2019"
                            MaximumDate="12/31/2019"
                            Date="02/02/2018" />

                <TimePicker Time="12:01:54" />
            </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>