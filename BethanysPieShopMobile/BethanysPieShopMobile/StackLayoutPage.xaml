<!--EKSEMPLERNE FRA: https://docs.microsoft.com/en-us/xamarin/xamarin-forms/user-interface/layouts/layout-options-->

<!--Demo af ALIGNMENT, som styrer den modsatte akse af StackLayout (vertical, som alignment styrer altså horizontal)-->
    <StackLayout Orientation="Vertical" Margin="0,20,0,0">
        <Label Text="Start" BackgroundColor="Red" HorizontalOptions="Start" />
        <Label Text="Center" BackgroundColor="Yellow" HorizontalOptions="Center" />
        <Label Text="End" BackgroundColor="Green" HorizontalOptions="End" />
        <Label Text="Fill" BackgroundColor="Gray" HorizontalOptions="Fill" />
        <Label Text="Default = Fill" BackgroundColor="Blue" TextColor="White" />
    </StackLayout>

