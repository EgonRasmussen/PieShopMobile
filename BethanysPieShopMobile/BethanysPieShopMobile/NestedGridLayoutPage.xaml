<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BethanysPieShopMobile.NestedGridLayoutPage">

    <Grid RowDefinitions="100, 2*, *" ColumnDefinitions="*, *, *">
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
               Text="Welcome to Bethany's Pie Shop"  
               HorizontalOptions="Center" VerticalOptions="Center" />
        <BoxView Grid.Row="1" Grid.Column="0" 
                 Color="Green" />
        <BoxView Grid.Row="1" Grid.Column="1"
                 Color="Red" />
        <BoxView Grid.Column="2"
                 Color="Blue" Grid.Row="1" />
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" RowDefinitions="*, *" ColumnDefinitions="*, *" >
            <BoxView Grid.Row="0" Grid.Column="0"
                     Color="AntiqueWhite" />
            <BoxView Grid.Row="0" Grid.Column="1"
                     Color="Aqua"/>
            <BoxView Grid.Row="1" Grid.Column="0"
                     Color="DarkOrange"/>
            <BoxView Grid.Row="1" Grid.Column="1"
                     Color="LawnGreen" />
        </Grid>
        <BoxView Grid.Row="2" Grid.Column="2"
                 Color="Violet"/>
    </Grid>
</ContentPage>